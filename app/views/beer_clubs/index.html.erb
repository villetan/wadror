
<h1>Listing Beer Clubs</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th>Founded</th>
    <th>City</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= beer_club.founded %></td>
        <td><%= beer_club.city %></td>
        <% if current_user%>
            <td><%= link_to 'Edit', edit_beer_club_path(beer_club),class:"btn btn-warning btn-xs"  %></td>
            <% if current_user.admin%>
                <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-xs"  %></td>
            <%end%>
        <%end%>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer club', new_beer_club_path, class:"btn btn-primary" %>
