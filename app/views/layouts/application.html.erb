<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navibar">

  <%= link_to 'Breweries', breweries_path %>
  <%= link_to 'Beers', beers_path %>
  <%= link_to 'Ratings', ratings_path %>
  <%= link_to 'Beer clubs', beer_clubs_path %>

  <%= link_to 'Users', users_path %>

  <% if current_user %>
      <p><%= link_to current_user.username, current_user %> signed in.
        <%= link_to 'Rate a beer', new_rating_path%>
        <%= link_to 'Join a beer club', new_membership_path %>
        <%= link_to 'Sign out', signout_path, method: :delete %>
      </p>
      <% else%>
      <%= link_to 'Sign in', signin_path %>
      <%= link_to 'Sign up', signup_path %>
  <% end %>
</div>
<%= yield %>

</body>
</html>
